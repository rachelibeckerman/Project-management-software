<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="800">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/image/background.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <!--btn to handle engineers-->
        <Button Content="Handle Engineers" HorizontalAlignment="Left"  VerticalAlignment="Top"
                Height="80" Width="150" Click="BtnHandleEngineers_Click" Margin="539,200,0,0"/>
        <!--btn initialize the Database -->
        <Button Content="Database initialization" HorizontalAlignment="Left"  VerticalAlignment="Top" 
                Height="50" Width="127" Margin="507,396,0,0" Click="BtnDatabaseInitialization_Click" RenderTransformOrigin="0.599,3.601"/>
        <!--btn to handle tasks-->
        <Button Content="Handle Tasks" HorizontalAlignment="Left"  VerticalAlignment="Top"
                Height="80" Width="150"  Margin="355,200,0,0" Click="BtnHandleTasks_Click"/>

    </Grid>
</Window>
